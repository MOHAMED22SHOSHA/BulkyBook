@model Product
<div class="card shadow border-0 mt-4">

    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@Model.Title</h2>
                <span>By : @Model.Author</span>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mb-2 border w-25 form-control">
            Back to List
        </a>
        <div class="row">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/500x600" alt="Product Image" class="product-image">
            </div>
            <div class="col-md-8">
                <div class="btn btn-warning border-1">Category </div>
                <span>@Model.Category.Name</span>
                <p class="p-1"><strong>ISBN:</strong> @Model.ISBN</p>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Quantity</th>
                            <th scope="col">1-50</th>
                            <th scope="col">51-100</th>
                            <th scope="col">100+</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.ListPrice</td>
                            <td>@Model.Price</td>
                            <td>@Model.Price50</td>
                            <td>@Model.Price100</td>
                        </tr>
                        
                    </tbody>
                </table>
                <div class="form-group">
                    <label for="count">Count</label>
                    <input type="number" class="form-control w-25 m-2" id="count" value="1" min="1">
                </div>
                <button class="btn btn-primary bg-gradient  w-25 py-2 text-uppercase fw-semibold ">ADD TO CART </button>
            </div>
        </div>
     </div>
</div>